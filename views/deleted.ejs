<!DOCTYPE html>
<html>
<head>
  <title>Registros Eliminados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h1>Superhéroes Eliminados</h1>
  <a href="/" class="btn btn-primary mb-3">Volver</a>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre Real</th>
        <th>Nombre de Héroe</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% superheroes.forEach(sh => { %>
      <tr>
        <td><%= sh.nombre_real %></td>
        <td><%= sh.nombre_heroe %></td>
        <td>
          <form action="/restore/<%= sh.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-success">Restaurar</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>