<!DOCTYPE html>
<html>
<head>
  <title>Superhéroes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h1>Lista de Superhéroes Activos</h1>
  <a href="/create" class="btn btn-success mb-3">Nuevo Superhéroe</a>
  <a href="/deleted" class="btn btn-secondary mb-3">Ver Eliminados</a>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre Real</th>
        <th>Nombre de Héroe</th>
        <th>Foto</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% superheroes.forEach(sh => { %>
      <tr>
        <td><%= sh.nombre_real %></td>
        <td><%= sh.nombre_heroe %></td>
        <td><img src="<%= sh.foto_url %>" width="100"></td>
        <td>
          <a href="/edit/<%= sh.id %>" class="btn btn-warning">Editar</a>
          <form action="/delete/<%= sh.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>